#!/bin/bash
USER_EXISTS="$(getent passwd $USER)"

if [ -z "$USER_EXISTS" ]; then
    echo -e "\x1B[01;95m Creation of new ${USER^^} user ...\x1B[0m"
    useradd -m $USER
exit 1;
fi


chown -R $USER ./
chgrp -R www-data ./
chmod -R 750 ./
chmod g+s ./

chmod g+w -R ./data/cache
chmod g+w -R ./data/logs
chmod g+w -R ./data/sessions
chmod g+w -R ./data/uploads
chmod g+w -R ./public/uploads
